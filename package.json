{
  "dependencies": {
    "@tailwindcss/cli": "^4.0.17",
    "tailwindcss": "^4.0.17"
  },
  "devDependencies": {
    "vite-plugin-chrome-extension": "^0.0.7"
  },
  "scripts": {
    "build": "npx tailwindcss -c tailwind.config.js -i ./src/css/input.css -o ./src/css/output.css && vite build",
